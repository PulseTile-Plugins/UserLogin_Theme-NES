  <body>
    <noscript>You need to enable JavaScript to run this app.</noscript>

    <script>
      //if ('<%= details.params.error %>' !== '') alert('<%= details.params.error %>');

      // reload the page before grant has a chance to expire

      function setTimerCookie() {
        var expireTime = new Date(Date.now() + 590000);
        document.cookie = 'timer=live;expires=' + expireTime.toGMTString() + ';path=/';
      }

      function checkSession() {
        if (document.cookie.indexOf('timer') === -1) {
          // grant session has expired so reload home page
          document.location.href = '/';
        }
        else {
          testSession();
        }
      }

      function testSession() {
        setTimeout(function() {
          checkSession();
        },10000);
      }

      setTimerCookie();
      testSession();

    </script>

    <div id="root">

      <img src="/assets/logo-nes.png" alt="NHS Stotland" class="strapline" />

      <div class="LoginRegister">

        <div class="form-box">
          <div class="titleLogin">
            Log In<i class="fa fa-angle-down"></i>
          </div>

          <div class="grant-debug">
            <%- details.params.error %>
          </div>

          <form class="forms" autocomplete="off" action="/openid/interaction/<%= details.uuid %>/login" method="post" id="loginForm">

            <label>
              Email Address
              <input placeholder="Enter your email address" required type="email" name="email"  autofocus="on" />
            </label>
            <label>
              Password
              <input placeholder="Password" required type="password" name="password" placeholder="and password" <% if (details.params.login_hint) { %>autofocus="on"<% } %>>
            </label>

            <div class="btn-box">
              <a href="/openid/interaction/<%= details.uuid %>/forgotPassword" class="forgotten">[ Forgot my Password ]</a>
              <button class="succes login" type="button"><i class="fa fa-check"></i>Log In</button>
            </div>
          </form>

        </div>
      </div>


      <div data-remodal-id="modal" class="modal">

        <div class="modal__header">
          Terms and Conditions
          <button data-remodal-action="close" class="remodal-close"></button>
        </div>

        <div class="modal__content">

          <p class="c3">
            <span class="c2 c8">
              Copy to come
            </span>
          </p>

          </div><!-- ./modal__content -->

          <div class="modal__footer">

            <div class="btn-box">
              <button class="decline succes" type="button"><i class="fa fa-times"></i>
                Decline
              </button>
              <button class="agree succes" type="button" data-target="#loginForm"><i class="fa fa-check"></i>
                Agree
              </button>
  					</div>

          </div>
        </div>
      </div><!-- /.remodal -->

    </div><!-- #root -->

    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/remodal.min.js"></script>
    <script src="/assets/js/js.cookie.js"></script>
    <script src="/assets/js/main.js"></script>

  </body>
</html>
